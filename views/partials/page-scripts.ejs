<script type="text/javascript">
  $( document ).ready(function(){
    $('[data-toggle="popover"]').popover();

    $('#datepicker').datetimepicker({dateFormat: "yy-mm-dd"});


    window.Parsley.addValidator('isDate', {
      validate: function(value){
        //  return !isNaN(Date.parse(value))
        return /^((?:[1-9]\d{3})-(?:[0-1]\d)-(?:[0-3]\d)\s(?:[0-2]\d):(?:[0-5]\d))|((\d{1,2})\/(\d{1,2})\/([1-2]\d{3}),\s(\d{1,2}:\d{2}:\d{2})\s([A-Z]{2}))/.test(value)
      },
      messages: {
        en: 'Please choose a date (and time)',
      }

    });

    $('.injury-type-multiple').on('change', ()=> {
      $('.injury-type-multiple').trigger('input');
    })
    $('form').parsley();
    $('.injury-type-multiple').select2();

    $("#ui-datepicker-div").on('click', () => {
      $('#datepicker').trigger('input');
    })
});
</script>
